<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535">

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:background="#262626">

        </LinearLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/profile_layout_user"
            android:background="@drawable/profile_item_bg"
            android:layout_height="40dip"
            android:layout_width="fill_parent">

            <ImageView
                android:layout_marginLeft="12dip"
                android:layout_marginTop="8dip"
                android:layout_height="24dip"
                android:layout_width="24dip"
                android:background="@drawable/profile_user"
                android:id="@+id/profile_img_user" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/profile_img_user"
                android:text="@string/user"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:layout_marginLeft="15dip"
                android:layout_centerVertical="true"
                android:id="@+id/profile_text_user" />

            <RelativeLayout
                android:id="@+id/profile_layout_new_people"
                android:layout_height="20dip"
                android:layout_width="20dip"
                android:background="@drawable/profile_user_indecator_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dip">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#ffffff"
                    android:id="@+id/profile_text_new_user"
                    android:textSize="10dip"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="10"

                    />
            </RelativeLayout>


            <include
                layout="@layout/profile_item_divider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/profile_layout_setting"
            android:background="@drawable/profile_item_bg"
            android:layout_height="40dip"
            android:layout_width="fill_parent">

            <ImageView
                android:layout_marginLeft="12dip"
                android:layout_height="24dip"
                android:layout_marginTop="8dip"
                android:layout_width="24dip"
                android:background="@drawable/profile_setting"
                android:id="@+id/profile_img_setting" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/profile_img_setting"
                android:text="@string/setting"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:layout_marginLeft="15dip"
                android:layout_centerVertical="true"
                android:id="@+id/profile_text_setting" />


            <include
                layout="@layout/profile_item_divider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


        <RelativeLayout
            android:clickable="true"
            android:id="@+id/profile_layout_feedback"
            android:background="@drawable/profile_item_bg"
            android:layout_height="40dip"
            android:layout_width="fill_parent">

            <ImageView
                android:layout_marginLeft="12dip"
                android:layout_height="24dip"
                android:layout_marginTop="8dip"
                android:layout_width="24dip"
                android:background="@drawable/profile_feedback"
                android:id="@+id/profile_img_feedback" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/profile_img_feedback"
                android:text="@string/feedback"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:layout_marginLeft="15dip"
                android:layout_centerVertical="true"
                android:id="@+id/profile_text_feedback" />


            <include
                layout="@layout/profile_item_divider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


        <RelativeLayout
            android:clickable="true"
            android:id="@+id/profile_layout_check_for_update"
            android:background="@drawable/profile_item_bg"
            android:layout_height="40dip"
            android:layout_width="fill_parent">

            <ImageView
                android:layout_marginLeft="12dip"
                android:layout_height="24dip"
                android:layout_marginTop="8dip"
                android:layout_width="24dip"
                android:background="@drawable/profile_check_for_update"
                android:id="@+id/profile_img_check_for_update" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/profile_img_check_for_update"
                android:text="@string/check_for_update"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:layout_marginLeft="15dip"
                android:layout_centerVertical="true"
                android:id="@+id/profile_text_check_for_update" />

                <TextView
                    android:id="@+id/profile_text_version"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dip"
                    android:textSize="15dip"
                    android:gravity="center"
                    android:text="V1.10"

                    />


            <include
                layout="@layout/profile_item_divider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>


        <RelativeLayout
            android:clickable="true"
            android:id="@+id/profile_layout_exit_account"
            android:background="@drawable/profile_item_bg"
            android:layout_alignParentBottom="true"
            android:layout_height="40dip"
            android:layout_width="fill_parent">

            <ImageView
                android:layout_marginLeft="12dip"
                android:layout_marginTop="8dip"
                android:layout_height="24dip"
                android:layout_width="24dip"
                android:background="@drawable/profile_exit_account"
                android:id="@+id/profile_img_exit_account" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/profile_img_exit_account"
                android:text="@string/exit_account"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:layout_marginLeft="15dip"
                android:layout_centerVertical="true"
                android:id="@+id/profile_text_exit_account" />


            <include
                layout="@layout/profile_item_divider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                />

        </RelativeLayout>
</RelativeLayout>