<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="300dip"
	android:id="@+id/dialog_view"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/radius_border_pop_gray_title"
		android:orientation="horizontal" >
		<TextView
			android:id="@+id/dialog_ensure_text_title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dip"
			android:layout_marginTop="10dip"
			android:layout_marginLeft="50dip"
			android:layout_marginRight="50dip"
			android:gravity="center"
			android:textColor="#333333"
			android:textSize="15dip" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="1px"
			android:background="#4f8bb5" >
		</LinearLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" >
			<TextView
				android:id="@+id/dialog_ensure_text_content"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff"
				android:gravity="left|top"
				android:paddingBottom="20dip"
				android:paddingLeft="20dip"
				android:paddingRight="20dip"
				android:paddingTop="15dip"
				android:textColor="#333333"
				android:textSize="15dip" />

		</RelativeLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="1px"
			android:background="#4f8bb5" >
		</LinearLayout>
	</LinearLayout>


	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="60dip"
		android:background="@drawable/radius_border_pop_gray_bottom"
		android:orientation="horizontal" >
		<RelativeLayout
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1" >

            <Button
                android:layout_width="80dip"
                android:id="@+id/dialog_ensure_button_sure"
                android:layout_height="35dip"
                android:layout_centerInParent="true"
                android:background="@drawable/ensure_button_sure_bg"
                android:text="@string/sure"
                android:textColor="#ffffff"
                android:textSize="15dip" />

		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/dialog_ensure_layout_cancel"
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:layout_weight="1" >

            <Button
                android:layout_width="80dip"
                android:id="@+id/dialog_ensure_button_cancel"
                android:layout_height="35dip"
                android:layout_centerInParent="true"
                android:background="@drawable/ensure_button_cancel_bg"
                android:text="@string/cancel"
                android:textColor="#ffffff"
                android:textSize="15dip" />

		</RelativeLayout>
	</LinearLayout>
</LinearLayout>